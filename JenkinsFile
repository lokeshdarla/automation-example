pipeline {
    agent any

    tools {
        maven 'Maven' 
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/lokeshdarla/automation-example.git'
            }
        }

        stage('Verify Maven') {
            steps {
                script {
                    echo "Maven version: "
                    sh 'mvn --version'
                }
            }
        }

        stage('Build and Test') {
            steps {
                sh "mvn clean test"
            }
        }

        stage('Archive Test Results') {
            steps {
                junit '**/target/surefire-reports/*.xml'
            }
        }

        stage('Clean Up') {
            steps {
         
                sh "mvn clean"
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }

        success {
            echo 'Tests ran successfully!'
        }

        failure {
            echo 'Test case execution failed!'
        }
    }
}
